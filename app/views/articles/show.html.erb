<h1><%= @article.title %></h1>
<div class="content">
  <div class="post">
    <span id="meta">Posted on <%= @article.created_at.strftime("%b %d, %Y") %></span>
    <p><%= @article.content %></p>
  </div>
  <hr />
  <%= link_to "Articles", articles_path %> |
  <%= link_to "Edit", edit_article_path %> |
  <%= link_to "Delete", article_path, method: :delete, data: { confirm: "Are you sure?" } %>
</div>
