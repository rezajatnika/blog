<%= form_for @article do |f| %>
  <% if @article.errors.any? %>
  <div class="error_messages">
    <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="field">
    <%= f.label :title, "Title" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content, "Content (Markdown)" %><br />
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %><br />
  </div>
<% end %>
<%= link_to "Cancel", articles_path %> and back to article list.
