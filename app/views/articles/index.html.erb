<h1>Articles</h1>
<div class="content">
  <% @articles.order(created_at: :desc).each do |article| %>
    <h2><%= link_to article.title, article %></h2>
    <span id="meta">Posted on <%= article.created_at.strftime("%b %d, %Y %T") %></span>
    <div class="post">
      <p><%= article.content %></p>
    </div>
  <% end %>
  <hr />
  <%= link_to "Create New Article", new_article_path %>
</div>
