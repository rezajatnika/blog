<h1>Articles</h1>
<div class="content">
  <% @articles.order(created_at: :desc).each do |article| %>
    <h2><%= link_to article.title, article %></h2>
    <p id="meta">Posted on <%= article.created_at.strftime("%b %d, %Y %T") %></p>
    <div class="post">
      <%= markdown excerpt(article.content, ' ', radius: 250) %>
      <p id="meta"><%= link_to "Continue reading Â»", article %></p>
    </div>
  <% end %>
  <p><%= link_to "Create New Article", new_article_path %></p>
</div>
